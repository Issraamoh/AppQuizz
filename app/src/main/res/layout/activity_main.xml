<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2FFFE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Math Quiz"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="How many days in the week ?"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/textView_question2"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <RadioGroup
            android:id="@+id/radioGroupWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/textView_question1"
            app:layout_constraintTop_toBottomOf="@id/textView_question1">

            <RadioButton
                android:id="@+id/radio_button_5days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="5 days"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_button_6days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="6 days"
                android:textSize="20sp"
               />

            <RadioButton
                android:id="@+id/radio_button_7days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="7 days"
                android:textSize="20sp"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="How many hours in the day ? ?"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupWeek"
          />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/radioGroupHours"
    android:layout_marginTop="12dp"
    app:layout_constraintTop_toBottomOf="@id/textView_question2"
    app:layout_constraintStart_toStartOf="@id/textView_question2">

        <RadioButton
            android:id="@+id/radio_button22hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 hours"
            android:layout_margin="8dp"
            android:textSize="20sp"
        />

        <RadioButton
            android:id="@+id/radio_buton23hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23 hours"
            android:layout_margin="8dp"
            android:textSize="20sp"
       />

        <RadioButton
            android:id="@+id/radio_button24hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:text="24 hours"
            android:textSize="20sp"
            />
</RadioGroup>
        <TextView
            android:id="@+id/textView_question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="164dp"
            android:text="How many fingers do you have?"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupHours"
            />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/radioGroupFinger"
    android:layout_marginTop="12dp"
    app:layout_constraintTop_toBottomOf="@+id/textView_question3"
    app:layout_constraintStart_toStartOf="@+id/textView_question3">
        <RadioButton
            android:id="@+id/radio_buttonfinger6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="6 fingers"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_buttonfinger8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="8 fingers"
            android:textSize="20sp"
             />

        <RadioButton
            android:id="@+id/radio_buttonfinger5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="5 fingers"
            android:textSize="20sp" />
</RadioGroup>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="SUBMIT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroupFinger" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>